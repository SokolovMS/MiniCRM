<Window x:Class="MiniCRM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniCRM"
        xmlns:vm="clr-namespace:MiniCRM.ViewModel"
        xmlns:vw="clr-namespace:MiniCRM.View"
        Title="MainWindow" Height="350" Width="525">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:ClientListViewModel}">
            <vw:ClientListView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ProjectListViewModel}">
            <vw:ProjectListView/>
        </DataTemplate>
    </Window.Resources>
    
    <Grid Margin="10">
        <Border Background="Gray">
            <ItemsControl ItemsSource="{Binding ViewModels}" Margin="4" />
        </Border>
    </Grid>
</Window>
